{% extends "layouts/base.njk" %}

{% block header %}
<div class="px-4 py-5 my-5 container text-center bg-body-tertiary">
  <h1 class="display-5">{{ site.name }}</h1>
  <div id="home-lead" class="col-lg-6 max-auto">
    <p class="lead mb-4">
      {% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}
    </p>
    <form class="d-sm-flex justify-content-sm-center" role="search">
      <input class="form-control" type="search" id="search-input" placeholder="Pesquisar..." aria-label="Pesquisa">
    </form>
  </div>
</div>
{% endblock %}

{% block content %}
<div id="search-results"></div>

{{ content | safe }}
{% endblock %}
