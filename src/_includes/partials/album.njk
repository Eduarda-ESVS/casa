<div class="album py-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {% for a in album %}
      <div class="col">
        <div class="card shadow-sm">
          <img width="100%" height="225" background="#55595c" color="#eceeef" class="card-img-top" alt="{{ a.title }}" src="{{ a.teaser }}" />
          <div class="card-body">
            <h3 class="card-title">{{ a.title }}</h3>
            <p class="card-text">{{ a.excerpt }}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">Exibir</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Guardar</button>
              </div>
              <small class="text-body-secondary">{{ a.date }}</small>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.album-->
